<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameOverActivity">

    <TextView
            android:text="@string/score_wpm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_wpm"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_congratulations" android:layout_marginTop="64dp"
            android:textSize="30sp"/>
    <TextView
            android:text="@string/congratulations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_congratulations" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent" android:textSize="36sp"
            android:textColor="@color/colorAccent"/>
</androidx.constraintlayout.widget.ConstraintLayout>